<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><span aria-hidden="true">&larr;</span> {{__ 'Newer Posts'}}</a>
    {{/if}}
    <span class="page-number">Page {{page}} {{__ 'of'}} {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">{{__ 'Older Posts'}} <span aria-hidden="true">&rarr;</span></a>
    {{/if}}
</nav>
